# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here-use-secrets.token_hex(32)

# Database Configuration
DATABASE_URL=sqlite:///tennis_invoices.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost/tennis_invoices

# Email Configuration (Optional - for future features)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Security
SESSION_COOKIE_SECURE=true
WTF_CSRF_TIME_LIMIT=3600